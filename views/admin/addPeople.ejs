<% include ../partials/header.ejs %>
<main ng-app="dataEntry" ng-controller="perInfo">
  <h1><%= title %></h1>
  <br/>
<form action='/admin/addPeople' method="post">
  <div >
    <% if (title='Business'){} %>
            <label class="tableInput_td">first name</label>
            <label class="tableInput_td">last name</label>
            <label class="tableInput_td">phone</label>
            <label class="tableInput_td">email</label>
            <label class="tableInput_td">address</label>
            <label class="tableInput_td">city</label>
            <label class="tableInput_td">province</label>
            <label class="tableInput_td">country</label>
</div>
<div>
          <!-- <div index"> -->
              <input name="firstname" style ="width: 10%;" class="form-control tableInput"/>
              <input style ="width: 10%;" name="lastname"class="form-control tableInput"/>
              <input style ="width: 10%;" name="phone" class="form-control tableInput"/>
              <input style ="width: 15%;" name="email" class="form-control tableInput"/>
              <input style ="width: 15%;" name="address" class="form-control tableInput"/>
              <input style ="width: 10%;" name="city" class="form-control tableInput"/>
              <input style ="width: 15%;" name="province" class="form-control tableInput"/>
              <input style ="width: 15%;" name="country" class="form-control tableInput"/>
          </div>
    <fieldset class="col-md-8 row">
      <div>
        <a class='fa fa-plus-circle' id='addbtn' data-toggle='modal' data-target='#addTeam'></a>
      </div>
      <div>
        <input type="submit" class="btn btn-success" value="Submit"/>
      </div>
    </fieldset>
</form>

    <!-- Add record in Modal -->
  <div id="addTeam" class="modal fade" role="dialog" >
    <div class="modal-dialog modal-md">
      <div class="modal-content modalColor">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add person's information </h4>
        </div>
        <!--============Modal body starts==============-->
        <div class="modal-body">

            <fieldset class="col-md-12 modalRow">
              <div class="form-inline col-md-6 ">
                <label for="firstname" class="col-md-4 modalLabel">First Name</label>
                <input id ="firstname" placeholder="Enter first name here" class="form-control modalInput" ng-model="firstname"title="Enter first name here" required/>
             </div>
              <div class="form-inline col-md-6 ">
                <label for="lastname" class=" col-md-4 modalLabel">Last Name</label>
                <input id ="lastname" placeholder="Enter last name here" class="form-control modalInput" ng-model="lastname"title="Enter last name here" required/>
              </div>
            </fieldset>

            <fieldset class="col-md-12 modalRow">
              <div class="form-inline col-md-6 ">
                <label for="phone" class="col-md-4 modalLabel">phone</label>
                <input id ="phone" placeholder="000-000-0000" class="form-control modalInput" ng-model="phone" title="Enter phone number here" type="tel" required/>
              </div>
              <div class="form-inline col-md-6">
                <label for="email" class="col-md-4 modalLabel">email</label>
                <input id ="email" type="email" placeholder="aaa@aaa.com"class="form-control modalInput" ng-model="email"title="Enter email here" required/>
              </div>
            </fieldset>

            <fieldset class="col-md-12 modalRow">
              <div class="form-inline col-md-6">
                <label for="country" class="col-md-4 modalLabel">country</label>
                <input id ="country" placeholder="country name" class="form-control modalInput" ng-model="country" title="Enter province name here" required/>
              </div>
              <div class="form-inline col-md-6">
                <label for="province" class="col-md-4 modalLabel">province</label>
                <input id ="province" placeholder="province/state name" class="form-control modalInput" ng-model="province" title="Enter Country" required/>
              </div>
            </fieldset>
            <fieldset class="col-md-12 modalRow">
              <div class="form-inline col-md-6">
                <label for="address" class="col-md-4 modalLabel">address</label>
                <input id ="address" placeholder="12 abc street" class="form-control modalInput" ng-model="address" title="Enter street address" required/>
              </div>
              <div class="form-inline col-md-6">
                <label for="city" class="col-md-4 modalLabel">city</label>
                <input id ="city" placeholder="City name" class="form-control modalInput" ng-model="city" title="Enter city name" required/>
              </div>
            </fieldset>

            <fieldset class="row">
              <div class="modalButtons">
                <button type="button" class="btn btn-danger " ng-click="close()">Cancel</button>
                <input type="submit" value="Save" ng-click="saveModal()" class="btn btn-success"/>
              </div>
            </fieldset>

        </div> <!-- ending model-body -->
      </div><!-- ending model-content -->
    </div><!-- ending model-dialog -->
  </div><!-- ending model-->
</main>
<% include ../partials/footer.ejs %>
