<% include ../partials/header.ejs %>
<main ng-app="dataEntry" ng-controller="perInfo">
  <h1><%= title %></h1>
  <br/>
<action="/admin/addPeople" method="post" ng-submit="post()">
  <div style="display:flex;">
    <div class="table-responsive">
      <table class="table-condensed" ng-init="init()">
        <thead>
            <th class="tableInput_td">first name</th>
            <th class="tableInput_td">last name</th>
            <th class="tableInput_td">phone</th>
            <th>email</th>
            <th>address</th>
            <th>city</th>
            <th class="tableInput_td">province</th>
        </thead>
        <tbody >
          <tr ng-repeat="pj in perTm track by $index">
            <td class="tableInput_td" style="width: 13%;">
              <input class="form-control tableInput" ng-model="perTm[$index].firstname"/></td>
            <td class="tableInput_td" style="width: 13%;">
              <input class="form-control tableInput" ng-model="perTm[$index].lastname"/></td>
            <td class="tableInput_td"style="width:11%;">
              <input class="form-control tableInput" ng-model="perTm[$index].phone"/></td>
            <td class="tableInput_td">
              <input class="form-control tableInput" ng-model="perTm[$index].email"/></td>
            <td class="tableInput_td" style="width:20%;">
              <input class="form-control tableInput" ng-model="perTm[$index].address"/></td>
            <td class="tableInput_td" style="width:15%;">
              <input class="form-control tableInput" ng-model="perTm[$index].city"/></td>
            <td class="tableInput_td" style="width: 5%;">
              <input class="form-control tableInput" ng-model="perTm[$index].province"/></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  </div>
    <fieldset class="col-md-8 row">
      <div>
        <a class='fa fa-plus-circle' id='addbtn' data-toggle='modal' data-target='#addTeam'></a>
      </div>
      <div>
        <input type="submit" class="btn btn-success" value="Submit"/>
      </div>
    </fieldset>
</form>

    <!-- Add record in Modal -->
  <div id="addTeam" class="modal fade" role="dialog" >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add person's information </h4>
        </div>
        <!--============Modal body starts==============-->
        <div class="modal-body">
          <form class="form-inline" ng-submit="saveModal()">
            <fieldset class="">
              <div class="form-group col-sm-5">
                <label for="firstname" class="col-md-4">First Name</label>
                <input id ="firstname" placeholder="Enter first name here" class="form-control" ng-model="firstname"title="Enter first name here" required/>
              </div>
              <div class="form-group col-sm-5">
                <label for="lastname" class="col-md-4">Last Name</label>
                <input id ="lastname" placeholder="Enter last name here" class="form-control" ng-model="lastname"title="Enter last name here" required/>
              </div>
            </fieldset>
            <fieldset class="">
              <div class="form-group col-sm-5">
                <label for="phone" class="col-md-4" >phone</label>
                <input id ="phone" placeholder="000-000-0000" class="form-control" ng-model="phone"title="Enter phone number here" required/>
              </div>
              <div class="form-group col-sm-5">
                <label for="email" class="col-md-4">email</label>
                <input id ="email" placeholder="abc@abc.com" type="email" class="form-control" ng-model="email"title="Enter email here" required/>
              </div>
            </fieldset>
            <fieldset class="form-inline">
              <div class="form-group col-sm-5">
                <label for="address" class="col-md-4">address</label>
                <input id ="address" placeholder="12 abc street" class="form-control" ng-model="address" title="Enter address here" required/>
              </div>
              <div class="form-group col-sm-5 ">
                <label for="city" class="col-md-4">city</label>
                <input id ="city" placeholder="City name" class="form-control" ng-model="city" title="Enter city name here" required/>
              </div>
              <div class="form-group col-sm-5">
                <label for="province" class="col-md-4">province</label>
                <input id ="province" placeholder="province/state name" class="form-control" ng-model="province" title="Enter province name here" required/>
              </div>
            </fieldset>
            <br/>
            <fieldset class="row">
              <div>
                <button type="button" data-dismiss="modal" class="btn btn-danger col-md-3" ng-click="close()">Cancel</button>
                <input type="submit" class="btn btn-success col-md-3"/>
              </div>
            </fieldset>
          </form>
        </div> <!-- ending model-body -->
      </div><!-- ending model-content -->
    </div><!-- ending model-dialog -->
  </div><!-- ending model-->
</main>
<% include ../partials/footer.ejs %>
